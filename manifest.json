{
  "manifest_version": 2,

  "name": "Tiger Attack",
  "description": "Summon a vicious tiger to devour your web pages",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
    
  },
  
  "permissions": [
    "tabs",
    "activeTab"
  ],
   
  "web_accessible_resources":["icon.png"],
   
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*","file:///*"], 
      "js": ["myscript.js"]
    }
  ]
}
